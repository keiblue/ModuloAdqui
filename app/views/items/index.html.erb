<h1>Items</h1>



  
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>proveedor</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.nombre %></td>
        <td><%= item.precio %></td>
        <td><%= item.provider.name%></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

