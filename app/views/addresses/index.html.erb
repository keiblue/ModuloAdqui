

<h1>Direcciones</h1>

<table>
  <thead>
    <tr>
      <th>Region</th>
      <th>Comuna</th>
      <th>Calle</th>
      <th>Numero</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.region %></td>
        <td><%= address.comuna %></td>
        <td><%= address.calle %></td>
        <td><%= address.numero %></td>
        <td><%= address.comment %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
