    <div class="row">
      <div class="col">
        <ins>[Datos Proveedor]</ins>
      </div>
    </div>
    <div class="row">
      <div class="col">
        Razon Social: <em><%= @order.provider.name%></em>
      </div>
      <div class="col">
        Rut: <em><%= @order.provider.rut%>- <%= @order.provider.rut_dv%></em>
      </div>
      <div class="col"></div>
    </div>
    <div class="row">
      <div class="col">
        Direccion: <em><%= @order.provider.address.calle%> N°<%= @order.provider.address.numero%></em>
      </div>
